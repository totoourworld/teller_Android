    <style name="Bottom_button_Style" >
        <item name="android:background">@color/theme</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>m>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/bt_white</item>
    </style>

    <style name="Bottom_button_Style_update" >
        <item name="android:background">@color/yellow_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>m>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue_color</item>
    </style>
    

    <style name="EditTextStyle_Style" >
        <item name="android:background">@drawable/update_profile_edit</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">9dp</item>
        <item name="android:src">@drawable/txt1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/bt_black</item>
        <item name="android:textColorHint">@color/user_name_text</item>
    </style>


                android:id="@+id/splitingaccepted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/whitewithblock"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/splitingacctitile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/SPLITING_1_WAY"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/splitingaccdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/whitewithblock"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/accptedproimg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:src="@drawable/userblue"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/acceptedname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:src="@drawable/homepage"
                        android:text="@string/Accepted_RiderName"
                        android:textColor="@color/theme" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notspliting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/whitewithblock"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notsplitingtitile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Not Spliting Fare"
                    android:textColor="@color/theme"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/notsplitingdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/theme"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/notsplitedproimg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:src="@drawable/userwhite1"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/notsplitedname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/homepage"
                        android:text="@string/Not_Splited_RiderName"
                        android:textColor="#fff" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ad_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="#5CBEE8">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/ad_img"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#5CBEE8" />

            <TextView
                android:id="@+id/adTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ad_img"
                android:paddingTop="5dp"
                android:text="Ad Title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/adTitle"
                android:layout_centerVertical="true"
                android:paddingTop="20dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ad_close" />

        </RelativeLayout>


    </RelativeLayout>



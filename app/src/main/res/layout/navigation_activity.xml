<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    map:zOrderOnTop="true"
    tools:context=".FragmentRouteNavigation">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true"
    android:orientation="vertical"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="@string/Back"
            android:textColor="@color/bt_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back"
            android:gravity="center"
            android:padding="10dp"
            android:text="jkhukhjjhghjghjghsavghghsfghfghfg"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_color">
        <ImageView
            android:id="@+id/drawicon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:src="@drawable/menuu" />

    <LinearLayout
        android:layout_toRightOf="@+id/drawicon"
        android:layout_toLeftOf="@+id/tvDuration"
        android:id="@+id/control_buttons"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">



        <com.custom.BTextView
            app:btextfont="@string/RobotoCondensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="@string/we_are_reaching_at"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <com.custom.BTextView
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text=""
            android:gravity="center"
            android:singleLine="true"
            android:layout_centerHorizontal="false"
            android:textColor="@color/bt_white"
            android:textSize="14sp"
            app:btextfont="@string/RobotoCondensed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">
            <!--  <ImageView
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:src="@drawable/ic_distance"/>-->

            <com.custom.BTextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0 km"
                android:textColor="@color/bt_black"
                android:textSize="16sp"
                android:visibility="gone"
                app:btextfont="@string/SFUIDisplay_Regular" />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <!--  <ImageView

                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:padding="5dp"
                  android:src="@drawable/ic_clock"/>-->

        </LinearLayout>
    </LinearLayout>

        <com.custom.BTextView
            android:id="@+id/tvDuration"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:text=""
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circle_for_arrow"
            android:textColor="@color/bt_white"
            android:textSize="9sp"
            app:btextfont="@string/SFUIDisplay_Regular" />

    </RelativeLayout>
    <com.custom.BTextView
        android:id="@+id/tvDistCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:text="no"
        android:visibility="gone"
        android:textColor="@color/black_dark"
        android:textSize="16sp"
        app:btextfont="@string/SFUIDisplay_Regular" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/map_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_above="@+id/rl_driver_details" />

                    <include layout="@layout/notification_layout"/>


                </LinearLayout>
            </ScrollView>

        </RelativeLayout>


        <com.custom.BButton
            android:id="@+id/cancel_trip_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:text="@string/cancel_trip"
            android:background="@color/yellow_color"
            android:textColor="@color/bt_black"
            android:visibility="visible"
            android:textSize="16sp"
            app:btextfont="@string/RobotoCondensed"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>

    <RelativeLayout
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blue_color"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/p_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_color"
                android:padding="25dp">

                <com.rider.xenia.CircularImageView1
                    android:id="@+id/side_m_profile_mage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/blue_color"
                    android:src="@drawable/circleduserwhite" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/side_m_profile_mage"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <com.custom.BTextView
                        android:id="@+id/ridername"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="New Text"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        app:btextfont="@string/RobotoCondensed" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/yellow_color" />

            <ListView
                android:id="@+id/list_slidermenu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/p_view"
                android:layout_gravity="start"
                android:background="@color/blue_color"
                android:choiceMode="singleChoice"
                android:divider="@color/yellow_color"
                android:dividerHeight="0.5dp"
                android:listSelector="@drawable/list_selector" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/yellow_color" />

        </LinearLayout>

        <Button
            android:id="@+id/powered"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:background="#F5FFFA"
            android:text="@string/powered_by_cogzidel_technologies"
            android:textColor="@color/theme"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/version"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#F5FFFA"
            android:text="@string/version"
            android:textColor="@color/theme"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
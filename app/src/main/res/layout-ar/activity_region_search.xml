<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rider.xenia.RegionSearchActivity"
    android:background="#F5FFFA">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/theme"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Region Search"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView14"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/regcancel"
        android:background="@drawable/arrowback"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Enable_Region_Search"
        android:id="@+id/regionsearch"
        android:textColor="@color/theme"
        android:textSize="18sp"
        android:checked="false"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/regcancel"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

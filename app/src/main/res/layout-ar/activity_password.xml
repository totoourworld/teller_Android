<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rider.xenia.EditProfileActivity" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Change Password"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/theme"
            android:gravity="center"/>

    </RelativeLayout>
<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    android:layout_marginTop="50dp">
        
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="445dp" >

    <EditText
        android:id="@+id/newpswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oldpswd"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/oldpswd"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="@string/New_Password"
        android:inputType="textPassword" />

        

    <EditText
        android:id="@+id/oldpswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/Old_Password"
        android:inputType="textPassword">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/confirmpswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newpswd"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/newpswd"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="@string/Confirm_password"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/passwordcancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/passwordsave"
        android:layout_marginLeft="62dp"
        android:layout_toRightOf="@+id/passwordsave"
        android:src="@drawable/cancel_button" />

    <ImageView
        android:id="@+id/passwordsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/confirmpswd"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="63dp"
        android:src="@drawable/save_button" />

</RelativeLayout>
</ScrollView>
</RelativeLayout>